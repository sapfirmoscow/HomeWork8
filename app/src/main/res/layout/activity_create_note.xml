<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNoteActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:tint="@color/colorWhite"
        app:backgroundTint="#ff00"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_save_24" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/title_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заголовок" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/note_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/text_editText"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|text|textCapSentences|textAutoComplete|textImeMultiLine"
            android:hint="Заметка" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/yellow_imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_text"
        app:srcCompat="@android:color/holo_orange_dark" />

    <ImageButton
        android:id="@+id/blue_imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintStart_toEndOf="@+id/yellow_imageButton"
        app:layout_constraintTop_toTopOf="@+id/yellow_imageButton"
        app:srcCompat="@android:color/holo_blue_dark" />

    <ImageButton
        android:id="@+id/green_imageButon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintStart_toEndOf="@+id/blue_imageButton"
        app:layout_constraintTop_toTopOf="@+id/yellow_imageButton"
        app:srcCompat="@android:color/holo_green_dark" />


    <ImageButton
        android:id="@+id/red_imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintStart_toEndOf="@+id/green_imageButon"
        app:layout_constraintTop_toTopOf="@+id/yellow_imageButton"
        app:srcCompat="@android:color/holo_red_light" />

</android.support.constraint.ConstraintLayout>